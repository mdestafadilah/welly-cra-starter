{
  "name": "welly-cra-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "lint": "run-p lint:*",
    "lint:code": "eslint --fix . --ext .js,.ts,.tsx",
    "lint:style": "stylelint --fix \"**/*.{css,ts,tsx}\"",
    "test": "react-scripts test",
    "test:cov": "yarn test --coverage --watchAll=false",
    "clean": "run-p clean:*",
    "clean:build": "rimraf build",
    "clean:cov": "rimraf coverage",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --watchAll=false"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{css,ts,tsx}": "stylelint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "welly"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "@typescript-eslint/ban-ts-ignore": "off"
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-prettier"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": true
    },
    "ignoreFiles": [
      "build/**/*.css",
      "coverage/**/*.css"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.3",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.2",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "axios": "^0.20.0",
    "emotion-theming": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intl": "^5.8.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "swr": "^0.3.2",
    "typescript": "~4.0.2"
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.5",
    "eslint-config-welly": "^1.4.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}

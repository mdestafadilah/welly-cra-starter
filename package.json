{
  "name": "welly-cra-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "lint:code": "eslint --fix . --ext .js,.ts,.tsx",
    "lint:style": "stylelint --fix \"**/*.{css,ts,tsx}\"",
    "test": "react-scripts test",
    "test:cov": "yarn test --coverage --watchAll=false",
    "clean": "run-p clean:*",
    "clean:build": "rimraf build",
    "clean:cov": "rimraf coverage",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --watchAll=false"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{css,ts,tsx}": "stylelint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "welly"
    ]
  },
  "eslintIgnore": [
    "build"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-prettier"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": true
    },
    "ignoreFiles": [
      "build/**/*.css",
      "coverage/**/*.css"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.5",
    "@testing-library/user-event": "^12.0.11",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.22",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "typescript": "~3.9.6"
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.5",
    "eslint-config-welly": "^1.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
